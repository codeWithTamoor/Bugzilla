<%= form_with(model: ticket, scope: :ticket, url: ticket.persisted? ? ticket_path(ticket) : tickets_path, local: true, html: { multipart: true }) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
      <ul>
        <% ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.is_a?(Developer) %>
    <!-- Developers can only update status -->
    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, Ticket.statuses.keys, {}, class: 'form-control' %>
    </div>
  <% else %>
    <!-- Managers and QA can edit everything -->
    <div class="field">
      <%= form.label :type %>
      <%= form.select :type, [['Bug', 'Bug'], ['Feature', 'Feature']], {}, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

     <% if action_name == 'edit' %>
     <div class="field" >
      <%= form.label :project.name %>
      <%= text_area_tag :project_name, @ticket.project.name, class: 'form-control', readonly: true  %>
     </div>
     <%end%>

    <% if action_name == 'new' %>
     <div class="field">
        <%= form.label :project_id, "Project" %>
        <%= form.collection_select :project_id, @projects, :id, :name, { include_blank: "Select a project" }, class: 'form-control' %>
     </div>
     <% end %>
    <div class="field">
      <%= form.label :developer_id %>
      <%= form.collection_select :developer_id, @developers, :id, :name, { include_blank: 'Unassigned' }, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, Ticket.statuses.keys, {}, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :deadline %>
      <%= form.date_field :deadline, class: 'form-control' %>
    </div>


    <% if @ticket.screenshot.attached? %>
      <div class="existing-image">
        <%= image_tag @ticket.screenshot, size: "200x200" %>
      </div>
    <% end %>
      <div class="field">
        <%= form.label :screenshot %>
        <%= form.file_field :screenshot,class: 'form-control' %>
      </div>
      <% end %>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
    <% end %>
