<div id="<%= dom_id ticket %>">
  <p>
    <strong>Title:</strong>
    <%= ticket.title %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= ticket.type %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= ticket.status %>
  </p>

  <p>
    <strong>Developer:</strong>
    <%= ticket.developer_id %>
  </p>

  <p>
    <strong>Qa:</strong>
    <%= ticket.qa_id %>
  </p>

  <p>
    <strong>Project:</strong>
    <%= ticket.project_id %>
  </p>

  <p>
    <strong>Screenshot:</strong>
  </p>

  <% if @ticket.screenshot.attached? %>
  <%= image_tag url_for(@ticket.screenshot), class: "img-thumbnail", style: "max-width: 300px;" %>
  <% else %>
  <p>No image attached.</p>
  <% end %>


  <p>
    <strong>Description:</strong>
    <%= ticket.description %>
  </p>

  <p>
    <strong>Deadline:</strong>
    <%= ticket.deadline %>
  </p>
</div>
